<p id="notice"><%= notice %></p>

<p>
  Name:
  <%= @recipe.name %>
</p>

<img src= <%= @recipe.image_url %> alt="Picture of Food">
<p>
  Description:
  <%= @recipe.description %>
</p>

<p>
  Category:
  <%= @recipe.category %>
</p>

<p>
  Preparation Time:
  <%= @recipe.prep_time %>
</p>

<ul>
  Ingredients:
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient %> </li>
  <% end %>
</ul>
<%= form_for [@recipe, @ingredient] do |f| %>
  <div class="field">
    <%= f.label :numerator_amount %>
    <%= f.number_field :numerator_amount %>

    <%= f.label :denominator_amount %>
    <%= f.number_field :denominator_amount %>
  </div>

  <div class="field">
    <%= f.label :unit, "Unit of Measure"%><br>
    <%= f.text_field :unit %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p><%= link_to 'Edit', edit_recipe_path(@recipe) %></p>

<%= link_to 'Back', recipes_path %>
