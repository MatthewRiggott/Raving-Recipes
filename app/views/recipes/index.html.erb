<p id="notice"><%= notice %></p>

<div class="row">
  <div class= "small-12 small-centered">
    <h1 class="center-text">Recipes</h1>
  </div>
</div>
<hr>

<div class="row">
<div class="small-3 columns">
  <%= form_tag recipes_path, method: :get, role: "search" do %>

    <%= text_field_tag :search, params[:search], class: "searchfield" %>
    </div>
    <div class="small-3 columns small-pull-1 end">
    <%= submit_tag "Search", name: nil, class: "small radius button searchbutton" %>
    </div>
  <% end %>
</div>

<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="small-6 columns search-page">

      <p>Category: <%= recipe.category %> |
      Country: <%= recipe.country %></p>

      <img src= <%= recipe.image_url %> alt="Picture of Food">
      <div class="recipe-name">
        <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
      </div>
    </div>
  <% end %>
  <div class="small-6 columns small-pull-3 page-end">
    <%= paginate @recipes, window: 2 %>
  </div>
</div>
</div>
