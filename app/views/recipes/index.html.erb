<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>
  <%= form_tag recipes_path, method: :get, role: "search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil %>
  </p>
  <% end %>

  <% @recipes.each do |recipe| %>
    <div class="recipe">
    <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
      <%= recipe.category %>
    Country: <%= recipe.country %>
    </div>
    <img src= <%= recipe.image_url %> alt="Picture of Food">
  <% end %>
  <div class="page-end">
    <%= paginate @recipes, window: 4 %>
  </div>
